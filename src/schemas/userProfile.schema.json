{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "UserProfile",
  "type": "object",
  "required": ["id", "personalInfo"],
  "properties": {
    "id": {
      "type": "string"
    },
    "personalInfo": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        },
        "kana": {
          "type": "string"
        },
        "birthDate": {
          "type": "string",
          "format": "date"
        },
        "gender": {
          "enum": ["male", "female", "other"]
        },
        "address": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      }
    }
  }
}
