# ============================
# staging 環境: パイロット用
# ============================

# 環境識別
VITE_ENV_NAME=staging

# --- スケジュール機能の露出 ---
# スケジュール画面そのものは ON（閲覧優先）
VITE_FEATURE_SCHEDULES=true
# 予定の新規作成/編集は一旦 OFF（参照中心）
VITE_FEATURE_SCHEDULES_CREATE=false
# 新 Week UI を有効化
VITE_FEATURE_SCHEDULES_WEEK_V2=true

# 利用者 CRUD / コンプライアンスフォームはまだ封印
VITE_FEATURE_USERS_CRUD=false
VITE_FEATURE_COMPLIANCE_FORM=false

# --- 保存モード / 接続先 ---
# 保存はリアル（SharePoint など本番系バックエンド）
VITE_SCHEDULES_SAVE_MODE=real

# スケジュールは SharePoint port を使う
VITE_FEATURE_SCHEDULES_SP=true
VITE_FEATURE_SCHEDULES_GRAPH=false
VITE_FORCE_SHAREPOINT=true

# --- デバッグ系 ---
# Hydration HUD はオフ（現場に出さない）
VITE_FEATURE_HYDRATION_HUD=false

# デモモード / ログインスキップは禁止
VITE_DEMO_MODE=false
VITE_SKIP_LOGIN=false

# --- 既存の MSAL / SharePoint 設定 ---
# 下記は既存の .env / env.runtime の値をそのままコピーしてください
# VITE_SP_SITE_URL=...
# VITE_SP_SITE_RELATIVE_URL=...
# VITE_SP_SCHEDULES_LIST_ID=...
# VITE_MSAL_CLIENT_ID=...
# VITE_MSAL_AUTHORITY=...
# VITE_MSAL_REDIRECT_URI=...
# VITE_SP_SCOPE_DEFAULT=...
