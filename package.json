{
	"name": "audit-management-system-mvp",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "vite",
		"lint:cookies": "scripts/check-cookies.sh",
		"lint:docs": "node scripts/lint-docs.cjs",
		"certs:mkcert": "mkdir -p .certs && mkcert -key-file ./.certs/localhost-key.pem -cert-file ./.certs/localhost.pem localhost 127.0.0.1 ::1",
		"dev:https": "vite --https --host 127.0.0.1 --port 3000",
		"smoke:https": "lsof -tiTCP:3000 -sTCP:LISTEN | xargs -r kill -TERM && npm run certs:mkcert && npm run dev:https",
		"ports:clean": "lsof -tiTCP:3000,3001,5173 -sTCP:LISTEN | xargs -r kill -TERM",
		"dev:e2e": "VITE_MSAL_CLIENT_ID=dummy VITE_MSAL_TENANT_ID=dummy VITE_SP_RESOURCE=https://contoso.sharepoint.com VITE_SP_SITE_RELATIVE=/sites/Audit vite --port=5173 --strictPort",
		"build": "vite build",
		"preview": "vite preview",
		"config:print": "VITE_CONFIG_DEBUG=1 vite --force",
		"test": "vitest run",
		"test:ui": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:e2e:headed": "playwright test --headed",
		"e2e": "playwright test --project=chromium",
		"e2e:ui": "playwright test --ui",
		"e2e:install": "playwright install --with-deps",
		"ci:e2e": "playwright test --project=chromium || (npm run notify -- \"‚ùå E2E failed on CI\" && exit 1)",
		"typecheck": "tsc --noEmit",
		"lint": "eslint --ext .ts,.tsx src --max-warnings=0",
		"lint:dev": "eslint --ext .ts,.tsx src --max-warnings=999",
		"preci": "npm run lint && npm run typecheck && npm run lint:cookies",
		"preflight": "node scripts/preflight.cjs",
		"validate:project-auto": "bash scripts/validate-project-auto.sh",

		"prepare": "husky install",
		"health": "npm run typecheck || npm run --if-present build:types; npm run lint:dev; npx vitest run",
		"fix:a11y-dates": "node scripts/fix-a11y-dates.mjs",
		"fix:spclient-json-guard": "node scripts/patch-spclient-json-guard.mjs",
		"heal:try": "npm run fix:a11y-dates && npm run fix:spclient-json-guard && npm run health",
		"notify": "node scripts/notify.mjs",
		"ci:lh": "lhci autorun --config=lighthouserc.json --upload.target=temporary-public-storage --output=json",
		"perf:build": "npm run build",
		"perf:check": "npm run perf:build && npm run ci:lh",
		"perf:summary": "node scripts/report.mjs",
		"perf:report": "sh -c 'npm run -s perf:check; status=$?; npm run -s perf:summary; exit $status'",
		"ci:perf-report": "sh -c 'npm run -s perf:check; status=$?; npm run -s perf:summary; if [ $status -ne 0 ]; then NOTIFY_LAST_EXIT_CODE=$status npm run -s notify -- --only-on-fail --title \"Perf Budget / Lighthouse\" --files reports/perf-summary.md; exit $status; fi'"
	},
	"dependencies": {
		"@azure/msal-browser": "2.39.0",
		"@azure/msal-react": "^1.4.4",
		"@emotion/react": "^11.14.0",
		"@emotion/styled": "^11.14.1",
		"@mui/icons-material": "^7.3.2",
		"@mui/material": "^7.3.2",
		"date-fns": "^4.1.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.21.1",
		"web-vitals": "^4.2.0",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@lhci/cli": "^0.14.0",
		"@playwright/test": "^1.56.0",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^14.2.1",
		"@types/jest-axe": "^3.5.9",
		"@types/node": "^20.11.30",
		"@types/react": "^18.2.41",
		"@types/react-dom": "^18.2.17",
		"@typescript-eslint/eslint-plugin": "^8.44.1",
		"@typescript-eslint/parser": "^8.44.1",
		"@vitejs/plugin-react": "^4.2.1",
		"@vitest/coverage-v8": "^2.0.5",
		"axe-core": "^4.10.3",
		"changelogithub": "^13.16.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"husky": "^9.1.7",
		"jest-axe": "^10.0.0",
		"jsdom": "^26.1.0",
		"lint-staged": "^15.5.2",
		"typescript": "^5.4.5",
		"vite": "^4.4.9",
		"vitest": "^2.0.5"
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx}": "eslint --fix"
	}
}
