{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "jsx": "react-jsx",
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["vite/client", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/app/*": ["src/app/*"],
      "@/auth/*": ["src/auth/*"],
      "@/lib/*": ["src/lib/*"],
      "@/features/*": ["src/features/*"],
      "@/config/*": ["src/config/*"],
      "@/ui/*": ["src/ui/*"],
      "@/adapters/*": ["src/adapters/*"]
    }
  },
  "include": ["src", "tests"]
}
