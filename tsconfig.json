{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "types": ["vite/client", "node", "vitest/globals", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "@/app/*": ["src/app/*"],
      "@/auth/*": ["src/auth/*"],
      "@/lib/*": ["src/lib/*"],
      "@/features/*": ["src/features/*"],
      "@/features/iceberg-pdca/*": ["src/features/iceberg-pdca/*"],
      "@/features/users/*": ["src/features/users/*"],
      "@/features/users/components/*": ["src/features/users/components/*"],
      "@/hydration/*": ["src/hydration/*"],
      "@/config/*": ["src/config/*"],
      "@/sharepoint/*": ["src/sharepoint/*"],
      "@/ui/*": ["src/ui/*"],
      "@/adapters/*": ["src/adapters/*"],
      "@/test/*": ["tests/*"],
      "@/*": ["src/*"],
      "vitest/browser": ["types/vitest-browser.d.ts"],
      "vitest/browser/*": ["types/vitest-browser.d.ts"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src", "tests", "types", "debug.tsx", "vitest.setup.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    ".vite",
    ".vitest",
    ".turbo",
    ".cache",
    "test-results",
    "playwright-report",
    "public",
    "tests/e2e",
    ".vscode",
    ".vscode/**/*",
    "docs/**/*",
    "logs/**/*",
    "tmp/**/*"
  ]
}
