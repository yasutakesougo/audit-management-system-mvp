{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": ["src/**/*", "types/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    ".vite",
    ".vitest",
    "test-results",
    "public",
    "tests/e2e",
    ".vscode",
    ".vscode/**/*",
    "docs/**/*",
    "reports/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.stories.tsx",
    "tests/**/*"
  ]
}
