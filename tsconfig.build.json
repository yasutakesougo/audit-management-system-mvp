{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/app/*": ["src/app/*"],
      "@/auth/*": ["src/auth/*"],
      "@/lib/*": ["src/lib/*"],
      "@/features/*": ["src/features/*"],
      "@/features/iceberg-pdca/*": ["src/features/iceberg-pdca/*"],
      "@/features/users/*": ["src/features/users/*"],
      "@/features/users/components/*": ["src/features/users/components/*"],
      "@/hydration/*": ["src/hydration/*"],
      "@/config/*": ["src/config/*"],
      "@/sharepoint/*": ["src/sharepoint/*"],
      "@/ui/*": ["src/ui/*"],
      "@/adapters/*": ["src/adapters/*"],
      "@/test/*": ["tests/*"],
      "@/*": ["src/*"],
      "vitest/browser": ["types/vitest-browser.d.ts"],
      "vitest/browser/*": ["types/vitest-browser.d.ts"]
    }
  },
  "include": ["src/**/*", "types/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    ".vite",
    ".vitest",
    "test-results",
    "public",
    "tests/e2e",
    ".vscode",
    ".vscode/**/*",
    "docs/**/*",
    "reports/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.stories.tsx",
    "tests/**/*"
  ]
}
